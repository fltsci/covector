{
  "gitSiteUrl": "https://www.github.com/fltsci/covector/",
  "additionalBumpTypes": ["housekeeping"],
  "changeTags": {
    "feat": "New Features",
    "enhance": "Enhancements",
    "bug": "Bug Fixes",
    "deps": "Dependencies",
    "internal": "Changes Supporting Covector Development"
  },
  "pkgManagers": {
    "javascript": {
      "version": true,
      "getPublishedVersion": {
        "use": "fetch:check",
        "options": {
          "url": "https://registry.npmjs.com/${ pkg.pkg }/${ pkg.pkgFile.version }"
        }
      },
      "prepublish": [{ "command": "npm pack", "dryRunCommand": true }],
      "publish": [
        {
          "command": "echo '<h2>NPM Publish</h2>\n<details>\n<summary><em>publish details</em></summary>\n\n```'",
          "dryRunCommand": true,
          "pipe": true
        },
        {
          "command": "npm publish --provenance --access public",
          "dryRunCommand": "npm publish --provenance --access public --dry-run",
          "pipe": true
        },
        {
          "command": "echo '```\n\n</details>\n'",
          "dryRunCommand": true,
          "pipe": true
        }
      ],
      "postpublish": {
        "use": "fetch:check",
        "options": {
          "url": "https://registry.npmjs.com/${ pkg.pkg }/${ pkg.pkgFile.version }"
        },
        "retries": [5000, 5000, 5000]
      }
    }
  },
  "packages": {
    "@fltsci/covector": {
      "path": "./packages/covector",
      "manager": "javascript",
      "postpublish": [
        {
          "use": "fetch:check",
          "options": {
            "url": "https://registry.npmjs.com/${ pkg.pkg }/${ pkg.pkgFile.version }"
          },
          "retries": [5000, 5000, 5000]
        },
        "git tag ${ pkg.pkg }-v${ pkgFile.versionMajor } -f",
        "git tag ${ pkg.pkg }-v${ pkgFile.versionMajor }.${ pkgFile.versionMinor } -f",
        "git push --tags -f"
      ],
      "dependencies": [
        "@fltsci/covector-apply",
        "@fltsci/covector-assemble",
        "@fltsci/covector-files",
        "@fltsci/covector-changelog",
        "@fltsci/covector-command"
      ],
      "assets": [
        {
          "path": "./packages/covector/fltsci-covector-${ pkgFile.version }.tgz",
          "name": "fltsci-covector-${ pkgFile.version }.tgz"
        }
      ]
    },
    "@fltsci/covector-apply": {
      "path": "./packages/apply",
      "manager": "javascript",
      "dependencies": ["@fltsci/covector-files"],
      "assets": [
        {
          "path": "./packages/apply/fltsci-covector-apply-${ pkgFile.version }.tgz",
          "name": "fltsci-covector-apply-${ pkgFile.version }.tgz"
        }
      ]
    },
    "@fltsci/covector-assemble": {
      "path": "./packages/assemble",
      "manager": "javascript",
      "dependencies": ["@fltsci/covector-command", "@fltsci/covector-files"],
      "assets": [
        {
          "path": "./packages/assemble/fltsci-covector-assemble-${ pkgFile.version }.tgz",
          "name": "fltsci-covector-assemble-${ pkgFile.version }.tgz"
        }
      ]
    },
    "@fltsci/covector-changelog": {
      "path": "./packages/changelog",
      "manager": "javascript",
      "dependencies": ["@fltsci/covector-files"],
      "assets": [
        {
          "path": "./packages/changelog/fltsci-covector-changelog-${ pkgFile.version }.tgz",
          "name": "fltsci-covector-changelog-${ pkgFile.version }.tgz"
        }
      ]
    },
    "@fltsci/covector-files": {
      "path": "./packages/files",
      "manager": "javascript",
      "dependencies": ["@fltsci/covector-toml"],
      "assets": [
        {
          "path": "./packages/files/fltsci-covector-files-${ pkgFile.version }.tgz",
          "name": "fltsci-covector-files-${ pkgFile.version }.tgz"
        }
      ]
    },
    "@fltsci/covector-command": {
      "path": "./packages/command",
      "manager": "javascript",
      "dependencies": [],
      "assets": [
        {
          "path": "./packages/command/fltsci-covector-command-${ pkgFile.version }.tgz",
          "name": "fltsci-covector-command-${ pkgFile.version }.tgz"
        }
      ]
    },
    "@fltsci/covector-toml": {
      "path": "./packages/toml",
      "manager": "javascript",
      "dependencies": [],
      "assets": [
        {
          "path": "./packages/toml/fltsci-covector-toml-${ pkgFile.version }.tgz",
          "name": "fltsci-covector-toml-${ pkgFile.version }.tgz"
        }
      ]
    },
    "@fltsci/covector-types": {
      "path": "./packages/types",
      "manager": "javascript",
      "version": false,
      "publish": false
    },
    "action": {
      "path": "./packages/action",
      "manager": "javascript",
      "preversion": "npm run pkg",
      "publish": false,
      "getPublishedVersion": false,
      "dependencies": ["@fltsci/covector"],
      "assets": false
    }
  }
}
